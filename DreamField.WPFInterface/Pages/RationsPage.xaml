<Page x:Class="DreamField.WPFInterface.Pages.RationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DreamField.WPFInterface.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="RationsPage" Width="725" Height="464.95">

    <Grid Margin="10,10,9.8,10" DataContext="{Binding Source={StaticResource Locator}}">
        <Button x:Name="AddRationButton" Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                            ToolTip="MaterialDesignFloatingActionDarkButton" Margin="0,0,22.2,20" DataContext="{Binding Rations, Mode=OneWay}"
                Command="{Binding AddRationCommand, Mode=OneWay}" Width="33" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <materialDesign:PackIcon Kind="Plus" Height="24" Width="24" />
        </Button>
    </Grid>
</Page>
