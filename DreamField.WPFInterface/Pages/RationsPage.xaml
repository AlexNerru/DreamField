<Page x:Class="DreamField.WPFInterface.Pages.RationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DreamField.WPFInterface.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      Title="RationsPage" Width="413">

    <Grid Margin="10,10,9.8,10" DataContext="{Binding Source={StaticResource Locator}}">
        <Button x:Name="AddRationButton" Content="Add Ration" Margin="0,0,28,20" DataContext="{Binding Rations, Mode=OneWay}" Command="{Binding AddRationCommand, Mode=OneWay}" HorizontalAlignment="Right" Width="80" Height="25" VerticalAlignment="Bottom" MaxWidth="{Binding Width, ElementName=AddRationButton}" MaxHeight="{Binding Height, ElementName=AddRationButton}"/>

    </Grid>
</Page>
